<form id="newFood" class="form-inline">
    <input id="foodTitle" class="span7" type="text" placeholder="Food name">
    <input id="foodPrice" class="span2" type="text" placeholder="Price">
    <button class="btn" type="button">Add</button>
</form>

<table class="table table-bordered table-hover">
    <tbody id="foods">
    </tbody>
    <tfoot>
        <td>Всього: <span id="total">0</span> грн</td><td></td><td></td><td></td><td></td>
    </tfoot>
</table>

{{! Modal window for editing food }}
<div id="editFood" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Edit</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="control-group">
                <label class="control-label" for="editFoodTitle">Title</label>
                <div class="controls">
                    <input type="text" id="editFoodTitle" class="input-xlarge" placeholder="Enter food title">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="editFoodPrice">Price</label>
                <div class="controls">
                    <div class="input-prepend input-append">
                      <input type="text" id="editFoodPrice" class="input-mini" placeholder="Enter food price">
                      <span class="add-on">грн</span>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button id="saveFood" class="btn btn-primary">Save</button>
    </div>
</div>
